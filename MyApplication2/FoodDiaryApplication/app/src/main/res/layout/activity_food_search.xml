<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jacobrawlinson.assignmentapplication.FoodSearch">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff902d"
        android:id="@+id/searchHeader"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Food Search"
            android:id="@+id/searchTitle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="32sp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchHeader"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:id="@+id/searchText"
            android:layout_weight="0.55" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:id="@+id/searchButton"
            android:src="@drawable/search"
            android:clickable="true"
            android:nestedScrollingEnabled="false"
            android:adjustViewBounds="false"
            android:onClick="searchFoods" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/tableHeader">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="Food Name"
            android:id="@+id/listViewName"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/listViewCal"
                android:text="Calories (kcal)"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewRecent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tableHeader"
        android:layout_alignParentBottom="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewSearch"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@+id/tableHeader"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
