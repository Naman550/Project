<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jacobrawlinson.assignmentapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu" >

        </activity>
        <activity
            android:name=".FoodSearch"
            android:label="@string/title_activity_food_search"
            android:parentActivityName=".MainMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jacobrawlinson.assignmentapplication.MainMenu" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Summary"
            android:label="@string/title_activity_summary"
            android:parentActivityName=".MainMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jacobrawlinson.assignmentapplication.MainMenu" />
        </activity>
        <activity
            android:name=".FoodDiary"
            android:label="@string/title_activity_food_diary" >
        </activity>
        <activity
            android:name=".FoodDetails"
            android:label="@string/title_activity_food_details"
            android:parentActivityName=".FoodSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jacobrawlinson.assignmentapplication.FoodSearch" />
        </activity>
    </application>

</manifest>
